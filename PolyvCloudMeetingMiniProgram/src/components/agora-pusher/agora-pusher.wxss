.pusher-container {
  background: black;
  display: block;
  position: absolute;
}

.sud {
  background-color: #1b2a38;
  opacity: 0.65;
}

.i-box {
  position: absolute;
  z-index: 15;
}

.i-close-mic {
  position: absolute;
  top: 20rpx;
  z-index: 9999999999999999;
  right: 20rpx;
  width: 64rpx;
  height: 64rpx;
}

.box {
  position: absolute;
  z-index: 99999999999999;
  width: 100%;
  height: 100%;
}

.p-close-cam {
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 99999999999999;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-color: #353535;
  width: 100%;
  height: 100%;
}

.p-close-cam .i-close-cam {
  width: 110rpx;
  height: 96rpx;
  margin-bottom: 24rpx;
}

.p-close-cam .p-text {
  text-align: center;
  width: 180px;
  font-size: 30rpx;
  font-family: SFProText-Regular;
  font-weight: 400;
  color: #888;
}
